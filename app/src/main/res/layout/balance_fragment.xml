<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/balance"
        android:id="@+id/balanceFragmentTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Balance"
        android:id="@+id/balanceFragmentBalance"
        android:layout_below="@+id/balanceFragmentTitle"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/balanceDialogQR"
        android:layout_below="@+id/balanceFragmentBalance"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Address"
        android:id="@+id/balanceFragmentAddress"
        android:layout_below="@+id/balanceDialogQR"
        android:layout_centerHorizontal="true"
        android:minLines="2"
        android:layout_margin="25dp"/>

    <View style="@style/Divider"
          android:layout_alignParentBottom="true"/>

</RelativeLayout>